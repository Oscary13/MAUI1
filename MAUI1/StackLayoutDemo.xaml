             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI1.StackLayoutDemo"
             Title="StackLayoutDemo">
    <StackLayout VerticalOptions="Center">
        <StackLayout >
            <Image Source="dotnet_bot"
            HorizontalOptions="StartAndExpand"
               />
